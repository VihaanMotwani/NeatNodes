{
  "manifest_version": 3,
  "name": "NeatNodes",
  "version": "1.0.0",
  "description": "Track your DSA learning with pattern-based graph visualization, spaced repetition, and timed practice.",
  "permissions": ["storage", "alarms", "notifications", "activeTab", "scripting"],
  "host_permissions": ["https://leetcode.com/*", "https://neetcode.io/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*", "https://neetcode.io/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png"
    }
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
